<layout version="0.1.0">
	<default>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/cronlog/styles.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
	</default>
	<cronlog_history_index>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Cron jobs / Tools / Magento Admin</title>
			</action>
		</reference>
		<reference name="content">
			<block type="cronlog/adminhtml_history" name="cronlog_history" />
		</reference>
	</cronlog_history_index>
	<cronlog_history_show>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Cron jobs / Tools / Magento Admin</title>
			</action>
		</reference>
		<reference name="content">
			<block type="cronlog/adminhtml_show" name="cronlog_show" />
		</reference>
	</cronlog_history_show>
</layout>