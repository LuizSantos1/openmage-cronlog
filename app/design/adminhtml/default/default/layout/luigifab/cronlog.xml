<layout version="0.1.0">
	<adminhtml_system_config_edit>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/cronlog/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
	</adminhtml_system_config_edit>

	<adminhtml_cronlog_history_index>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Cron jobs / Tools / Magento Admin</title>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/cronlog/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
		<reference name="content">
			<block type="cronlog/adminhtml_history" name="cronlog_history" />
		</reference>
	</adminhtml_cronlog_history_index>

	<adminhtml_cronlog_history_view>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Cron jobs / Tools / Magento Admin</title>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/cronlog/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
		<reference name="content">
			<block type="cronlog/adminhtml_history_view" name="cronlog_history_view" />
		</reference>
	</adminhtml_cronlog_history_view>

	<adminhtml_cronlog_history_new>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Cron jobs / Tools / Magento Admin</title>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/cronlog/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
	</adminhtml_cronlog_history_new>

	<adminhtml_cronlog_config_index>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Cron jobs / Tools / Magento Admin</title>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/cronlog/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/luigifab/cronlog/app.min.js</name>
			</action>
		</reference>
		<reference name="content">
			<block type="cronlog/adminhtml_config" name="cronlog_config_rw" />
			<block type="cronlog/adminhtml_config_gridro" name="cronlog_config_ro" />
		</reference>
	</adminhtml_cronlog_config_index>
</layout>